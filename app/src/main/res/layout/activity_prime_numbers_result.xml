<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    tools:context="com.infovsn.homework.PrimeNumbersResult">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ad_container">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/headerTitleResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_prime_result"
                android:textSize="22sp"
                android:textColor="@color/textPrimary"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/primeResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </ScrollView>

    <!-- Flexible ad container anchored to the bottom; content stays above it. -->
    <com.infovsn.homework.MaxHeightFrameLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
