<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/menuCardRipple">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/menuCardBackground" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Subtle shadow effect -->
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/menuCardBackground" />
                    <corners android:radius="20dp" />
                    <stroke android:width="1dp" android:color="@color/menuCardStroke" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>

