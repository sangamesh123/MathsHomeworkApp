<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/keypadRipple">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/actionBarRed"
                android:endColor="@color/actionBarRedDark"
                android:angle="270" />
            <corners android:radius="@dimen/keypad_corner_radius" />
            <stroke android:width="1dp" android:color="@color/actionBarRedDark" />
        </shape>
    </item>
</ripple>
