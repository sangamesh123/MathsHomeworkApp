<resources>

    <!-- Global application theme using Material 3 with ActionBar -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- Ensure an ActionBar is present (not NoActionBar) -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- Core brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- AppCompat ActionBar styling retained -->
        <item name="actionBarStyle">@style/RedActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_white</item>

        <!-- Material 3 edge-to-edge handling -->
        <item name="enableEdgeToEdge">true</item>

        <!-- Edge-to-edge: make system bars transparent; content will handle insets -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Text colors and window background -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Updated ActionBar (Toolbar) style -->
    <style name="RedActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/actionBarRed</item>
        <item name="titleTextStyle">@style/RedActionBarTitleText</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="RedActionBarTitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Addition" parent="AppTheme" />

    <!-- Modern keypad button base style (no background; flat) -->
    <style name="KeypadButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/keypad_button_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/keypad_button_height</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="KeypadButton.Equal">
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="KeypadButton.Primary" parent="KeypadButton">
        <!-- Keep primary variant flat/transparent as well -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/keypadIconTint</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="DisplayText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:background">@drawable/display_bg</item>
    </style>

    <style name="DisplayText.Center" parent="DisplayText">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="KeypadIconButton" parent="KeypadButton">
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- New primary variant for icon buttons (e.g. send/equals arrow) -->
    <style name="KeypadIconButton.Primary" parent="KeypadIconButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/keypadIconTint</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Dedicated result (send) button: square arrow icon, centered -->
    <style name="KeypadResultButton" parent="KeypadIconButton.Primary">
        <!-- Provide comfortable touch target while keeping icon visually balanced -->
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <!-- Use tint inheritance for adaptability; can null out if pure white asset used -->
        <item name="android:tint">@color/keypadIconTint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Home menu button style updated for light background -->
    <style name="HomeMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/home_menu_button_bg</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:elevation">2dp</item>
        <!-- Disable default background tint so our white pill isn't tinted red -->
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="HomeMenuButton.Grey" parent="HomeMenuButton">
        <item name="android:background">@drawable/home_menu_button_bg_grey</item>
        <!-- Ensure no tinting overrides -->
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Shared content card style for app-generated sections -->
    <style name="ContentCard">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Material 3 Main Menu Button Style -->
    <style name="Material3MenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/menu_card_button_bg</item>
        <item name="android:textColor">@color/menuTextPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">@color/menuIconTint</item>
        <item name="iconSize">24dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

</resources>
